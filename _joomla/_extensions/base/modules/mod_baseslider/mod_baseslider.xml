<?xml version="1.0" encoding="utf-8" ?>
<extension type="module" version="3.0" client="site" method="upgrade">
	<name>BaseSlider</name>
	<author>Ivo Junior</author>
	<creationDate>07/10/2017</creationDate>
	<copyright>Copyright Â© 2012, Envolute Tecnologia, All Rights Reserved.</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>dev@envolute.com</authorEmail>
	<authorUrl>http://www.envolute.com</authorUrl>
	<version>1.0.0</version>
	<description>MOD_BASESLIDER_DESC</description>
	<files>
		<filename module="mod_baseslider">mod_baseslider.php</filename>
		<filename>index.html</filename>
		<filename>mod_baseslider.xml</filename>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB.mod_baseslider.ini</language>
		<language tag="en-GB">language/en-GB.mod_baseslider.sys.ini</language>
		<language tag="pt-BR">language/pt-BR.mod_baseslider.ini</language>
		<language tag="pt-BR">language/pt-BR.mod_baseslider.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic" label="MOD_BASESLIDER_CONFIG">
				<field name="phpFile" type="text" filter="string" default="" label="MOD_BASESLIDER_PHP_FILE_LABEL" description="MOD_BASESLIDER_PHP_FILE_DESC" />

				<field name="slider" type="spacer" class="text" label="MOD_BASESLIDER_LABEL" />

				<field name="slide_mode"
					type="radio"
					class="btn-group"
					label="MOD_BASESLIDER_MODE_LABEL"
					description="MOD_BASESLIDER_MODE_DESC"
					default="fade"
				>
					<option value="fade">Fade</option>
					<option value="horizontal">Horizontal</option>
					<option value="vertical">Vertical</option>
				</field>

				<field name="slide_fullScreen"
					type="radio"
					class="btn-group"
					label="MOD_BASESLIDER_FULLSCREEN_LABEL"
					description="MOD_BASESLIDER_FULLSCREEN_DESC"
					default="0"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<field name="slide_minHeight" type="text" filter="string" default="" label="MOD_BASESLIDER_MIN_HEIGHT" description="MOD_BASESLIDER_MIN_HEIGHT_DESC" />
				<field name="slide_fullHeight" type="text" filter="string" default="" label="MOD_BASESLIDER_FULL_HEIGHT" description="MOD_BASESLIDER_FULL_HEIGHT_DESC" />
				<field name="slide_minSlides" type="text" filter="int" default="1" label="MOD_BASESLIDER_MIN_SLIDES" description="MOD_BASESLIDER_MIN_SLIDES_DESC" />
				<field name="slide_maxSlides" type="text" filter="int" default="1" label="MOD_BASESLIDER_MAX_SLIDES" description="MOD_BASESLIDER_MAX_SLIDES_DESC" />
				<field name="slide_slideWidth" type="text" filter="int" default="0" label="MOD_BASESLIDER_WIDTH" description="MOD_BASESLIDER_WIDTH_DESC" />
				<field name="slide_slideMargin" type="text" filter="int" default="0" label="MOD_BASESLIDER_MARGIN" description="MOD_BASESLIDER_MARGIN_DESC" />
				<field name="slide_moveSlides" type="text" filter="int" default="0" label="MOD_BASESLIDER_MOVE_SLIDES" description="MOD_BASESLIDER_MOVE_SLIDES_DESC" />

				<field name="slide_adaptiveHeight"
					type="radio"
					class="btn-group"
					label="MOD_BASESLIDER_ADAPTIVE_HEIGHT_LABEL"
					description="MOD_BASESLIDER_ADAPTIVE_HEIGHT_DESC"
					default="0"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<field name="slide_loop"
					type="radio"
					class="btn-group"
					label="MOD_BASESLIDER_LOOP_LABEL"
					description="MOD_BASESLIDER_LOOP_DESC"
					default="1"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<field name="slide_autoHover"
					type="radio"
					class="btn-group"
					label="MOD_BASESLIDER_AUTO_HOVER_LABEL"
					description="MOD_BASESLIDER_AUTO_HOVER_DESC"
					default="1"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<field name="slide_caption"
					type="radio"
					class="btn-group"
					label="MOD_BASESLIDER_CAPTION_LABEL"
					description="MOD_BASESLIDER_CAPTION_DESC"
					default="0"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<field name="slide_nav"
					type="radio"
					class="btn-group"
					label="MOD_BASESLIDER_NAV_LABEL"
					description="MOD_BASESLIDER_NAV_DESC"
					default="0"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<field name="slide_pager"
					type="radio"
					class="btn-group"
					label="MOD_BASESLIDER_PAGER_LABEL"
					description="MOD_BASESLIDER_PAGER_DESC"
					default="1"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<field name="slide_controls"
					type="radio"
					class="btn-group"
					label="MOD_BASESLIDER_CONTROLS_LABEL"
					description="MOD_BASESLIDER_CONTROLS_DESC"
					default="0"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<field name="slide_auto"
					type="radio"
					class="btn-group"
					label="MOD_BASESLIDER_AUTO_LABEL"
					description="MOD_BASESLIDER_AUTO_DESC"
					default="1"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<field name="slide_pause" type="text" class="input-small"
					label="MOD_BASESLIDER_PAUSE_LABEL"
					description="MOD_BASESLIDER_PAUSE_DESC"
					default="7000" />

				<field name="slide_removeContainer"
					type="radio"
					class="btn-group"
					label="MOD_BASESLIDER_REMOVE_CONTAINER_LABEL"
					description="MOD_BASESLIDER_REMOVE_CONTAINER_DESC"
					default="0"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
			</fieldset>
			<fieldset name="MOD_BASESLIDER_CODE">
				<field name="code" type="textarea" filter="raw" class="input-xxlarge" rows="10" label="MOD_BASESLIDER_CODE_LABEL" description="MOD_BASESLIDER_CODE_DESC" />
				<field name="css" type="textarea" filter="raw" rows="8" class="input-xxlarge" label="MOD_BASESLIDER_CSS_LABEL" description="MOD_BASESLIDER_CSS_DESC"></field>
				<field name="script" type="textarea" filter="raw" rows="8" class="input-xxlarge" label="MOD_BASESLIDER_JS_LABEL" description="MOD_BASESLIDER_JS_DESC"></field>
			</fieldset>
			<fieldset name="advanced">
				<field name="moduleclass_sfx" type="text" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" desc="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"/>
			</fieldset>
		</fields>
	</config>
</extension>
