				<option value="1">COM_BASECONTENT_ACCESS_VIEW_PUBLIC</option>
				<option value="2">COM_BASECONTENT_ACCESS_AUTHOR_PUBLIC</option>
				<option value="3">COM_BASECONTENT_ACCESS_EDITOR_PUBLIC</option>
				<option value="4">COM_BASECONTENT_ACCESS_ADMIN_PUBLIC</option>
